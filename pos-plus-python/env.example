# POS+ 区块链节点配置文件示例
# 复制此文件为 .env 并根据需要修改

# 服务器配置
SERVER_HOST=localhost
SERVER_PORT=9000

# 节点网络配置  
ADDR=9000

# 已知节点列表 (用逗号分隔，格式: host:port)
# 示例：KNOWN_NODES=localhost:9001,localhost:9002,192.168.1.100:9000
KNOWN_NODES=localhost:9001,localhost:9002

# 调试配置
DEBUG=True

# 默认质押数量
STAKE=100

# 日志级别 (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=DEBUG

# 网络同步间隔 (秒)
SYNC_INTERVAL=30

# 最大连接数
MAX_CONNECTIONS=50
